<?xml version="1.0"?>
<config>
    <modules>
        <VinaiKopp_CategoryLink>
            <version>0.1.1</version>
        </VinaiKopp_CategoryLink>
    </modules>
    <global>
        <models>
            <vinaikopp_categorylink>
                <class>VinaiKopp_CategoryLink_Model</class>
                <resourceModel>vinaikopp_categorylink_resource</resourceModel>
            </vinaikopp_categorylink>
            <vinaikopp_categorylink_resource>
                <class>VinaiKopp_CategoryLink_Model_Resource</class>
            </vinaikopp_categorylink_resource>
        </models>
        <helpers>
            <vinaikopp_categorylink>
                <class>VinaiKopp_CategoryLink_Helper</class>
            </vinaikopp_categorylink>
        </helpers>
        <resources>
            <vinaikopp_categorylink_setup>
                <setup>
                    <module>VinaiKopp_CategoryLink</module>
                </setup>
            </vinaikopp_categorylink_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <catalog_category_flat_loadnodes_before>
                <observers>
                    <vinaikopp_categorylink>
                        <type>model</type>
                        <class>vinaikopp_categorylink/observer</class>
                        <method>catalogCategoryFlatLoadnodesBefore</method>
                    </vinaikopp_categorylink>
                </observers>
            </catalog_category_flat_loadnodes_before>
            <catalog_category_collection_load_before>
                <observers>
                    <vinaikopp_categorylink>
                        <type>model</type>
                        <class>vinaikopp_categorylink/observer</class>
                        <method>catalogCategoryCollectionLoadBefore</method>
                    </vinaikopp_categorylink>
                </observers>
            </catalog_category_collection_load_before>
            <catalog_category_collection_load_after>
                <observers>
                    <vinaikopp_categorylink>
                        <type>model</type>
                        <class>vinaikopp_categorylink/observer</class>
                        <method>catalogCategoryCollectionLoadAfter</method>
                    </vinaikopp_categorylink>
                </observers>
            </catalog_category_collection_load_after>
        </events>
    </frontend>
</config>